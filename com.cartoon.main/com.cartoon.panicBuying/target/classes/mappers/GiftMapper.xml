<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cartoon.mapper.GiftMapper">

    <select id="getGiftById" resultType="com.cartoon.entity.Gift">
        select
        id as id,
        type as type,
        count as count,
        start_time as startTime,
        end_time as endTime
        from gift
        <trim prefix="where" prefixOverrides="and | or">
            <if test="id != null">
                and id=#{id}
            </if>
        </trim>
    </select>

    <select id="getGiftListByMap" resultType="com.cartoon.entity.Gift" parameterType="java.util.Map">
        select
        id as id,
        type as type,
        count as count,
        start_time as startTime,
        end_time as endTime
        from gift
        <trim prefix="where" prefixOverrides="and | or">
            <if test="id != null and id!=''">
                and id=#{id}
            </if>
            <if test="type != null and type!=''">
                and type=#{type}
            </if>
            <if test="count != null and count!=''">
                and count=#{count}
            </if>
            <if test="startTime != null and startTime!=''">
                <![CDATA[ and start_time>=#{startTime} ]]>
            </if>
            <if test="endTime != null and endTime!=''">
                <![CDATA[ and end_time<=#{endTime} ]]>
            </if>

            <if test="ids != null">
                and id not in
                <foreach collection="ids" item="item" separator="," open="(" close=")">
                    #{item}
                </foreach>
            </if>

        </trim>
        <if test="beginPos != null and pageSize != null ">
            limit #{beginPos},#{pageSize}
        </if>
    </select>

    <select id="getGiftCountByMap" resultType="Integer" parameterType="java.util.Map">
        select count(*) from gift
        <trim prefix="where" prefixOverrides="and | or">
            <if test="id != null and id!=''">
                and id=#{id}
            </if>
            <if test="type != null and type!=''">
                and type=#{type}
            </if>
            <if test="count != null and count!=''">
                and count=#{count}
            </if>
            <if test="startTime != null and startTime!=''">
                and start_time=#{startTime}
            </if>
            <if test="endTime != null and endTime!=''">
                and end_time=#{endTime}
            </if>
        </trim>
    </select>

    <insert id="insertGift" parameterType="com.cartoon.entity.Gift">
        insert into gift(
        id,
                        type,
                        count,
                        start_time,
                        end_time)
        values(
         #{id},
                     #{type},
                     #{count},
                     #{startTime},
                    #{endTime})
    </insert>

    <update id="updateGift" parameterType="com.cartoon.entity.Gift">
        update gift
        <trim prefix="set" suffixOverrides="," suffix="where id=#{id}">
            <if test="type != null and type!=''">
                type=#{type},
            </if>
            <if test="count != null and count!=''">
                count=#{count},
            </if>
            <if test="startTime != null and startTime!=''">
                start_time=#{startTime},
            </if>
            <if test="endTime != null and endTime!=''">
                end_time=#{endTime}
            </if>
        </trim>
    </update>
</mapper>